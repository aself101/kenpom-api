# Sports API Data Service - Environment Configuration

# ============================================================================
# KENPOM API CREDENTIALS - https://kenpompy.readthedocs.io/en/latest/
# Site: https://kenpom.com/
# ============================================================================

# Your KenPom account credentials
KENPOM_EMAIL=your.email@example.com
KENPOM_PASSWORD=your_password

# ============================================================================
# RATE LIMITING CONFIGURATION (Optional)
# ============================================================================

# Delay between API calls in seconds
# Default: 3-12 seconds (random range)
MIN_DELAY_SECONDS=3
MAX_DELAY_SECONDS=12

# ============================================================================
# RETRY CONFIGURATION (Optional)
# ============================================================================

# Maximum number of retry attempts for failed API calls
MAX_RETRIES=3

# Base delay for exponential backoff (in seconds)
RETRY_BASE_DELAY=3

# ============================================================================
# LOGGING CONFIGURATION (Optional)
# ============================================================================

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# ============================================================================
# DATA COLLECTION CONFIGURATION (Optional)
# ============================================================================

# Earliest season to collect (default: 1998)
EARLIEST_SEASON=1998

# Year when analytics became available (default: 2010)
ANALYTICS_START_YEAR=2010
